# Telegram Bot Token
# Получите токен у @BotFather в Telegram
BOT_TOKEN=your_bot_token_here

# OpenRouter API Key
# Получите API ключ на https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Model (опционально)
# По умолчанию используется meta-llama/llama-3.1-8b-instruct:free
# Другие доступные модели: google/gemini-flash-1.5, anthropic/claude-3-haiku, etc.
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free

# Опциональные настройки
PORT=3000
NODE_ENV=development

# Логирование (опционально)
# Уровни: 0=DEBUG, 1=INFO, 2=WARN, 3=ERROR
LOG_LEVEL=1

# Директория для логов (для Docker)
LOG_DIR=/app/logs

# Для развертывания через GitHub Actions
# SERVER_HOST=your_server_ip
# SERVER_USER=root
# SERVER_SSH_KEY=your_ssh_private_key
